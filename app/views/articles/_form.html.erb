
<% if @article.errors.any? %>
<h2> Error </h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li> <%= msg %></li>
</ul>
  <% end %>
<% end %>  

<%= form_for @article do |f| %>

  <p>
    <%= f.label :title %> 
    <%= f.text_field :title %>
  </p>
  <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
  </p>
  <p>
      <%= f.submit %>
  </p>

<% end %>

<%= link_to "Back to articles page", articles_path %> 